<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupButtonStyle">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_margin">@dimen/pop_width_margin</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="PopupWidthViewStyle">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_margin">@dimen/pop_width_margin</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item> <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item> <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 背景是否模糊显示 -->
    </style>

    <style name="GuideWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>
</resources>